{{!
    @template tool_courserating/course_rating_block

    Example context (json):
    {
    }

}}
<div class="tool_courserating-widget pt-2 pt-0 {{extraclasses}}">
    <div data-for="tool_courserating-cfield-wrapper" data-courseid="{{courseid}}" class="rating-summary">
        {{{ratingdisplay}}}
    </div>
    {{#rate}}
        <div class="add-rating-link">
            <a href="#" data-action="tool_courserating-addrating" data-courseid="{{courseid}}">{{#str}}addrating, tool_courserating{{/str}}</a>
        </div>
    {{/rate}}
</div>
{{#parentelement}}
    {{#js}}
        /* Move the widget to the header area */
        const widget = document.querySelector(".tool_courserating-widget");
        const header = document.querySelector("{{parentelement}}");
        if (header) {
            header.appendChild(widget);
        }
    {{/js}}
{{/parentelement}}
